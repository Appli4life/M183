@using Session.Utilities;
@inject IHttpContextAccessor Context

@{
    var currentRole = Context.HttpContext.Session.GetString(SessionConstants.RoleProperty);
    switch (currentRole)
    {
        case SessionConstants.UserRole:
            Layout = "~/Views/Shared/_UserLayout.cshtml";
            break;
        case SessionConstants.AdminRole:
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;

    }
}
