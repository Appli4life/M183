@{
    ViewData["Title"] = "Add User Page";
}
@model Session.Models.AddUserViewModel

<body>
    @using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username"})
        <div>
            <span asp-validation-for="@Model.UserName" style="color:red"></span>
        </div>

        @Html.LabelFor(m => m.UserPassword)
        @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control", placeholder = "Password"})
        <div>
            <span asp-validation-for="@Model.UserPassword" style="color:red"></span>
        </div>

        @Html.LabelFor(m => m.UserSecondPassword)
        @Html.PasswordFor(m => m.UserSecondPassword, new { @class = "form-control", placeholder = "Password nochmals eingeben" })
        <div>
            <span asp-validation-for="@Model.UserSecondPassword" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-success">Add User</button>
    }

    <p style="color: green">@TempData["UserCreated"]</p>
</body>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
