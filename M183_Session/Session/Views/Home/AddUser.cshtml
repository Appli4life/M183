@{
    ViewData["Title"] = "Add User Page";
}
@model Session.Models.AddUserViewModel

<body>
    @using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
    {
            <div class="mb-3">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username"})
                <div>
                    <span asp-validation-for="@Model.UserName" style="color:red"></span>
                </div>
                <div class="col-auto">
                    <span id="usernameHelpInline" class="form-text">
                        Muss zwischen 3-20 Zeichen lang sein.
                    </span>
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.UserPassword)
                @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control",placeholder = "Password" })
                <div>
                    <span asp-validation-for="@Model.UserPassword" style="color:red"></span>
                </div>
                <div class="col-auto">
                    <span id="passwordHelpInline" class="form-text">
                        Muss zwischen 8-20 Zeichen lang sein.
                    </span>
                </div>
            </div>


            <div class="mb-3">
                @Html.LabelFor(m => m.UserSecondPassword)
                @Html.PasswordFor(m => m.UserSecondPassword, new { @class = "form-control", placeholder = "Password nochmals eingeben" })
                <div>
                    <span asp-validation-for="@Model.UserSecondPassword" style="color:red"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-success">User erstellen</button>
    }

    <p style="color: green">@TempData["UserCreated"]</p>
    <p style="color: red">@TempData["UserNotCreated"]</p>
</body>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
